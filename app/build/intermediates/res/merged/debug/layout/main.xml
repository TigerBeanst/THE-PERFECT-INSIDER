<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/ly1"
		android:gravity="center">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/customText"
			android:id="@+id/textview"
			android:layout_alignRight="@+id/customText"
			android:layout_alignEnd="@+id/customText"
			android:layout_alignLeft="@+id/customText"
			android:layout_alignStart="@+id/customText"
			android:gravity="center"/>

		<EditText
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/customText"
			android:layout_below="@id/textview"
			android:hint="@string/fffde"
			android:gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/saveText"
			android:text="@string/saveButton"
			android:layout_below="@id/customText"
			android:layout_alignRight="@id/customText"
			android:layout_alignEnd="@id/customText"
			android:layout_alignLeft="@id/customText"
			android:layout_alignStart="@id/customText"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reText"
            android:text="@string/reButton"
            android:layout_below="@id/saveText"
            android:layout_alignRight="@id/saveText"
            android:layout_alignEnd="@id/saveText"
            android:layout_alignLeft="@id/saveText"
			android:layout_alignStart="@id/saveText"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:gravity="center|bottom">
		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/uninstall"
			android:id="@+id/uninstall"/>

	</RelativeLayout>

</RelativeLayout>

